{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "linux-touchpad-controller",
  "version": "0.1.0",
  "identifier": "com.saracalihan.linux-touchpad-controller",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "linux-touchpad-controller",
        "maximizable": true,
        "maximized": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png"
    ]
  }
}
